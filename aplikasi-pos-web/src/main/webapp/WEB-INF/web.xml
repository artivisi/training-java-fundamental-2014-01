<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>HaloServlet</servlet-name>
        <servlet-class>com.muhardin.endy.training.pos.web.HaloServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdukListServlet</servlet-name>
        <servlet-class>com.muhardin.endy.training.pos.web.ProdukListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdukFormServlet</servlet-name>
        <servlet-class>com.muhardin.endy.training.pos.web.ProdukFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdukDownloadServlet</servlet-name>
        <servlet-class>com.muhardin.endy.training.pos.web.ProdukDownloadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdukUploadServlet</servlet-name>
        <servlet-class>com.muhardin.endy.training.pos.web.ProdukUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegionListServlet</servlet-name>
        <servlet-class>com.muhardin.endy.training.pos.web.RegionListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HaloServlet</servlet-name>
        <url-pattern>/halo.php</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdukListServlet</servlet-name>
        <url-pattern>/produk/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdukFormServlet</servlet-name>
        <url-pattern>/produk/form</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdukDownloadServlet</servlet-name>
        <url-pattern>/produk/download</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdukUploadServlet</servlet-name>
        <url-pattern>/produk/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegionListServlet</servlet-name>
        <url-pattern>/region/list</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
